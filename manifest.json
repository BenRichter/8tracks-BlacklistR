{
  "name": "skip8tracks",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Add skip Button to 8tracks.com and automatically skip these tracks in every playlist",
  "homepage_url": "https://github.com/BenRichter",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options/index.html",
  "content_scripts": [
    {
      "matches": ["*://*.8tracks.com/*"],
      "js":      ["src/inject/inject.js"]
    }
  ]
}